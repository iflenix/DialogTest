<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnDlg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/dialog_1">
    </Button>
    <Button
        android:id="@+id/btnDlg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/dialog_2"/>

    <Button
        android:id="@+id/btnTimeDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Pick Time"/>

    <Button
        android:id="@+id/btnListDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ListDlg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Animation test"
        android:id="@+id/textViewAnim"
        android:layout_gravity="center_horizontal" />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.storm.dialogtest.GraphicsView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>

</LinearLayout>
